{
  "name": "telraam-ui",
  "description": "A CRUD dashboard for telraam",
  "version": "1.0.0",
  "author": "Nuttyshrimp",
  "repository": "https://github.com/NuttyShrimp/telraam-ui",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "yarn format && tsc && vite build",
    "serve": "yarn build && vite preview",
    "format": "prettier . --write",
    "lint": "eslint --ext js,jsx,ts,tsx --fix src/",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.9",
    "@chakra-ui/theme-tools": "^1.2.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "framer-motion": "^6",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-react": "^1.2.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.2",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "sass": "^1.49.9",
    "typescript": "^4.5.5",
    "vite": "^2.8.5",
    "vite-plugin-eslint": "^1.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --ext js,jsx,ts,tsx --fix src/",
      "prettier . --write"
    ]
  }
}
